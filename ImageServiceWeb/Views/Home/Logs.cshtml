@using Infrastructure.Model

@model ImageServiceWeb.Models.LogsModel
@{
    ViewBag.Title = "Logs";
}

<h2>Logs</h2>

<div>
    @using (Html.BeginForm("Logs", "Logs", FormMethod.Post))
    {

        <div>
            <br />
            @Html.DropDownList("typeFilter",
                                                      new SelectList(Enum.GetValues(typeof(MessageTypeEnum))),
                                                      "Log entry type",
                                                      new { @class = "form-control" })
            <br />
            <input type="submit" id="submitId" value="Filter" class="btn-info" />

        </div>

    }

</div>

<h3>Log Entries</h3>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Status</th>
            <th scope="col">Message</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.LogEntries)
        {
            <tr>
                <td>@Html.DisplayFor(m => entry.Status)</td>
                <td>@Html.DisplayFor(m => entry.Message)</td>
            </tr>
        }

    </tbody>

</table>

