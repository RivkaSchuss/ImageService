@model ImageServiceWeb.Models.ConfigModel
@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>


<table class="table table-striped table-dark">
    <tbody>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OutputDirectory)</th>
            <td>@Html.DisplayName(Model.OutputDirectory)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LogName)</th>
            <td>@Html.DisplayName(Model.LogName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SourceName)</th>
            <td>@Html.DisplayName(Model.SourceName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ThumbnailSize)</th>
            <td>
                @{
                    if (Model.ThumbnailSize > 0)
                    {
                        @Html.DisplayName(Model.ThumbnailSize.ToString())
                    }
                    else
                    {
                        <span style="font-weight: normal; font-size: large">N / A</span>
                    }
                }
            </td>
        </tr>
    </tbody>
</table>

<h3>Directory Handlers</h3>
<table class="table table-striped table-dark">
    <tbody>
        @foreach (var handler in Model.Handlers)
        {
            <tr>
                @*<td>@Html.DisplayName(handler)</td>*@
                <td>
                    @Html.ActionLink(@handler, "ConfirmDeleteHandler", new { handlerToRemove = handler })
                    @*<input type="button" class="btn btn-danger btn-sm" value="Delete" id="deletebtn" data-handler="@handler" />*@
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
        $(document).ready(function () {
             $("#deletebtn").onclick(function (event) {
        var button = $(event.relatedTarget);
        var handlerRemove = button.data('handler');


